<table>
<tr>
  <th>Name</th>
  <th>Turn</th>
  <th>Next Step</th>
  <th>Deadline</th>
  <th colspan="3">Side 1 Orders Status</th>
  <th colspan="3">Side 2 Orders Status</th>
  <th>Actions</th>
</tr>

<% games.each_with_index do |game, rnum| %>
  <tr class="<%= rnum % 2 == 0 ? 'odd' : 'even' %>">
    <td><%= game.name %></td>
    <td align="right"><%= game.turn %></td>
    <td><%= game.deadline_type.name %></td>
    <td><%= l game.deadline %></td>

    <td><%= game.side1 %></td>
    <td><%= cnts[game.id][:s1_cur_orders_cnt] %></td>
    <td><%= cnts[game.id][:s1_num_ships_cnt] %></td>

    <td><%= game.side2 %></td>
    <td><%= cnts[game.id][:s2_cur_orders_cnt] %></td>
    <td><%= cnts[game.id][:s2_num_ships_cnt] %></td>

    <td>
      <%= link_to "Orders", game_path(game) %>
      <% if user_signed_in? && game.created_by == @current_user.id %>
        <%= link_to 'Update', edit_game_path(game) %>
        <%= link_to 'Delete', game_path(game), :confirm => "Are you sure you want to delete " + game.name + "?", :method => :delete %>
      <% end %>
    </td>
  </tr>
<% end %>

</table>
